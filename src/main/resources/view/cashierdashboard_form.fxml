                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/icons/logout.png"/>
            </image>
        </ImageView>
        <AnchorPane fx:id="manageFormsRoot" layoutX="317.0" layoutY="183.0" prefHeight="666.0" prefWidth="1187.0">
            <children>
                <ImageView fitHeight="749.0" fitWidth="1187.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/img/customerDashboard.jpg"/>
                    </image>
