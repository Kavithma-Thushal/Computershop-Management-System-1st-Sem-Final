                <Font name="Times New Roman Bold" size="22.0"/>
            </font>
        </Button>
        <Button layoutX="52.0" layoutY="432.0" mnemonicParsing="false" onAction="#manageordersOnAction" prefHeight="6.0"
                prefWidth="214.0" text="Manage Orders">
            <font>
                <Font name="Times New Roman Bold" size="22.0"/>
            </font>
        </Button>
        <Button layoutX="52.0" layoutY="531.0" mnemonicParsing="false" onAction="#deliveryOnAction" prefHeight="6.0"
                prefWidth="214.0" text="Delivery">
            <font>
                <Font name="Times New Roman Bold" size="22.0"/>
            </font>
        </Button>
        <Button layoutX="52.0" layoutY="729.0" mnemonicParsing="false" onAction="#repairOnAction" prefHeight="6.0"
                prefWidth="214.0" text="Repair">
