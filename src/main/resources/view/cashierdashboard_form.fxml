            <font>
                <Font name="Arial Rounded MT Bold" size="32.0"/>
            </font>
        </Label>
        <Label fx:id="lblTime" layoutX="1383.0" layoutY="122.0" prefHeight="38.0" prefWidth="149.0">
            <font>
                <Font name="Arial Rounded MT Bold" size="32.0"/>
            </font>
        </Label>
