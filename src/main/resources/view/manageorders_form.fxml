<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="638.0" prefWidth="1179.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.computershop.controller.ManageordersFormController">
    <children>
        <ImageView fitHeight="670.0" fitWidth="1190.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/img/customers.jpg"/>
            </image>
        </ImageView>
        <TextField fx:id="txtId" layoutX="45.0" layoutY="37.0" prefHeight="19.0" prefWidth="187.0"
                   promptText="Order ID">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtCustomerid" layoutX="271.0" layoutY="37.0" prefHeight="0.0" prefWidth="187.0"
                   promptText="Customer ID">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtDatetime" layoutX="271.0" layoutY="109.0" prefHeight="0.0" prefWidth="187.0"
                   promptText="Date And Time">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtQty" layoutX="45.0" layoutY="109.0" prefHeight="0.0" prefWidth="187.0"
                   promptText="Quantity">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <Button layoutX="717.0" layoutY="37.0" mnemonicParsing="false" onAction="#saveOnAction" prefHeight="0.0"
                prefWidth="187.0" style="-fx-background-color: lightblue;" text="Save">
            <font>
                <Font name="Times New Roman Bold" size="17.0"/>
            </font>
        </Button>
        <Button layoutX="717.0" layoutY="109.0" mnemonicParsing="false" onAction="#updateOnAction" prefHeight="0.0"
                prefWidth="187.0" style="-fx-background-color: lightblue;" text="Update">
            <font>
                <Font name="Times New Roman Bold" size="17.0"/>
            </font>
        </Button>
        <Button layoutX="952.0" layoutY="109.0" mnemonicParsing="false" onAction="#deleteOnAction" prefHeight="0.0"
                prefWidth="187.0" style="-fx-background-color: lightblue;" text="Delete">
            <font>
                <Font name="Times New Roman Bold" size="17.0"/>
            </font>
        </Button>
        <TableView fx:id="tblOrders" layoutX="44.0" layoutY="182.0" prefHeight="448.0" prefWidth="1096.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="274.0" text="Order ID"/>
                <TableColumn fx:id="colCustomerid" prefWidth="274.0" text="Customer ID"/>
                <TableColumn fx:id="colQty" prefWidth="274.0" text="Quantity"/>
                <TableColumn fx:id="colDatetime" prefWidth="272.0" text="Date And Time"/>
            </columns>
        </TableView>
        <TextField fx:id="txtSearch" layoutX="952.0" layoutY="37.0" onAction="#searchOnAction" prefHeight="0.0"
                   prefWidth="187.0" promptText="Search Here" style="-fx-background-color: lightblue;">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
    </children>
</AnchorPane>
