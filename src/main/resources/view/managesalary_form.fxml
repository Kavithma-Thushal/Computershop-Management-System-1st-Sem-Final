<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="615.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.computershop.controller.ManagesalaryFormController">
    <children>
        <ImageView fitHeight="640.0" fitWidth="1207.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/b.jpg"/>
            </image>
        </ImageView>
        <Label layoutX="52.0" layoutY="44.0" text="Salary Management" textFill="WHITE">
            <font>
                <Font name="Bernard MT Condensed" size="43.0"/>
            </font>
        </Label>
        <Label fx:id="lbldateandtime" layoutX="785.0" layoutY="44.0" prefHeight="54.0" prefWidth="382.0"
               textFill="WHITE">
            <font>
                <Font name="Bernard MT Condensed" size="43.0"/>
            </font>
        </Label>
        <TextField fx:id="txtCode" layoutX="52.0" layoutY="215.0" prefHeight="25.0" prefWidth="187.0"
                   promptText="Salary Code">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtEmployeeid" layoutX="52.0" layoutY="287.0" prefHeight="7.0" prefWidth="187.0"
                   promptText="Paying Employee ID">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtAmount" layoutX="52.0" layoutY="357.0" prefHeight="25.0" prefWidth="187.0"
                   promptText="Amount">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtDatetime" layoutX="52.0" layoutY="429.0" prefHeight="25.0" prefWidth="187.0"
                   promptText="Date &amp; Time">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </TextField>
        <Button layoutX="52.0" layoutY="508.0" mnemonicParsing="false" onAction="#saveOnAction" prefHeight="34.0"
                prefWidth="78.0" style="-fx-background-color: lightblue;" text="Save">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </Button>
        <Button layoutX="160.0" layoutY="508.0" mnemonicParsing="false" onAction="#searchOnAction" prefHeight="34.0"
                prefWidth="78.0" style="-fx-background-color: lightblue;" text="Search">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </Button>
        <Button layoutX="52.0" layoutY="566.0" mnemonicParsing="false" onAction="#updateOnAction" prefHeight="34.0"
                prefWidth="78.0" style="-fx-background-color: lightblue;" text="Update">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </Button>
        <Button layoutX="160.0" layoutY="566.0" mnemonicParsing="false" onAction="#deleteOnAction" prefHeight="34.0"
                prefWidth="78.0" style="-fx-background-color: lightblue;" text="Delete">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </Button>
        <TableView fx:id="tblSalary" layoutX="289.0" layoutY="160.0" prefHeight="400.0" prefWidth="878.0">
            <columns>
                <TableColumn fx:id="colcode" prefWidth="219.0" text="Salary Code"/>
                <TableColumn fx:id="colEmployeeid" prefWidth="219.0" text="Paying Employee ID"/>
                <TableColumn fx:id="colAmount" prefWidth="219.0" text="Amount"/>
                <TableColumn fx:id="colDatetime" prefWidth="220.0" text="Date &amp; Time"/>
            </columns>
        </TableView>
        <Button layoutX="1088.0" layoutY="581.0" mnemonicParsing="false" onAction="#backOnAction" prefHeight="34.0"
                prefWidth="78.0" style="-fx-background-color: grey;" text="Back">
            <font>
                <Font name="Bernard MT Condensed" size="17.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
