<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="638.0" prefWidth="1179.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.computershop.controller.ViewitemsFormController">
    <children>
        <ImageView fitHeight="670.0" fitWidth="1190.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/img/customers.jpg"/>
            </image>
        </ImageView>
        <TextField fx:id="txtCode" focusTraversable="false" layoutX="45.0" layoutY="37.0" prefHeight="19.0"
                   prefWidth="187.0" promptText="Item Code">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtDescription" focusTraversable="false" layoutX="271.0" layoutY="37.0" prefHeight="0.0"
                   prefWidth="187.0" promptText="Description">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtQtyonhand" focusTraversable="false" layoutX="271.0" layoutY="109.0" prefHeight="0.0"
                   prefWidth="187.0" promptText="Quantity On Hand">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <TextField fx:id="txtUnitprice" focusTraversable="false" layoutX="45.0" layoutY="109.0" prefHeight="0.0"
                   prefWidth="187.0" promptText="Unit Price">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
        <TableView fx:id="tblItem" focusTraversable="false" layoutX="44.0" layoutY="182.0" prefHeight="448.0"
                   prefWidth="1096.0">
            <columns>
                <TableColumn fx:id="colCode" prefWidth="274.0" text="Code"/>
                <TableColumn fx:id="colDescription" prefWidth="274.0" text="Description"/>
                <TableColumn fx:id="colUnitprice" prefWidth="274.0" text="Unit Price"/>
                <TableColumn fx:id="colQtyonhand" prefWidth="272.0" text="Quantity On Hand"/>
            </columns>
        </TableView>
        <TextField fx:id="txtSearch" layoutX="952.0" layoutY="37.0" onAction="#searchOnAction" prefHeight="0.0"
                   prefWidth="187.0" promptText="Search Here" style="-fx-background-color: lightblue;">
            <font>
                <Font name="Times New Roman" size="17.0"/>
            </font>
        </TextField>
    </children>
</AnchorPane>
